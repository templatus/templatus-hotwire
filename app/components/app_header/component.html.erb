<header class="flex justify-between items-end p-5 space-x-5 lg:flex-col lg:items-stretch lg:p-0 lg:space-y-36 lg:space-x-0 <%= css_class %>">
  <%= image_tag helpers.vite_asset_path('images/logo.svg'),
                class: 'p-3 w-20 h-20 bg-linear-to-br from-tertiary to-white rounded-sm lg:w-56 lg:h-56',
                alt: 'Logo',
                width: 150,
                height: 150 %>

  <%= render Tabs::Component.new do |t| %>
    <% t.with_tab text: 'Home', href: helpers.root_path %>
    <% t.with_tab text: 'About', href: helpers.about_path %>
  <% end %>
</header>
